{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "out",
    "newLine": "LF",
    "noResolve": true,
    "noEmitOnError": true,
    "inlineSources": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true
  },
  "files": [
    "node_modules/fs-extra-p/index.d.ts",
    "node_modules/fs-extra-p/bluebird.d.ts",
    "typings/babel.d.ts",
    "typings/source-map-support.d.ts",
    "typings/markdown-it.d.ts",
    "node_modules/typescript/lib/typescript.d.ts",
    "src/builder.ts",
    "src/declarationGenerator.ts",
    "src/docGenerator.ts",
    "src/awaiter.ts"
  ],
  "include": [
    "node_modules/@types/**/*.d.ts"
  ]
}
